                            },
                            "examples": {
                                "user-create": {
                                    "value": {
                                        "name": "Admin User",
                                        "username": "admin",
                                        "password": "1234"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful Operation",
                        "content": {
                            "application/json": {}
